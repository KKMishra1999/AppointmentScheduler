@*@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor*@

<div class="row">
    @if (TempData.ContainsKey("newUserSignUp"))
    {
        <div class="container">
            <div class="alert alert-success alert-dismissible">
                <a href="#" class="" data-dismiss="alert" aria-label="close"> </a>
                <strong>Account created for @TempData["newUserSignUp"].ToString()</strong>
            </div>
        </div>

    }
    <div class="container">
        @if (User.IsInRole(AppointmentScheduler.Helper.Roles.Admin))
        {
            <div class="row">
                <div class="form-group row col-4" id="divDoctorList">
                    <label>Select Doctor</label>
                    <select id="doctorId" asp-items=@ViewBag.DoctorList class="form-control select2" onchange="onDoctorChange()"></select>
                    @*@Html.DropDownList("doctorId", new SelectList(ViewBag.DoctorList, "Id", "Name"), new {@class="form-control select2"})*@
                </div>
                <div class="col-3 offset-5">
                    <a class="btn btn-secondary form-control" asp-controller="Account" asp-action="Register">Admin Registration</a>
                </div>
            </div>
        }
        <div id="calendar"></div>
    </div>
</div>

<partial name="_AddEditAppointment"/>


