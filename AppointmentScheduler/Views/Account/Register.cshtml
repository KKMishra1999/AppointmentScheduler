@model AppointmentScheduler.Models.VIewModels.RegisterViewModel

<h2>Sign Up</h2>
<div class="row">
    <div class="col-md-8">
        <section>
            <form id="account" method="post" asp-action="Register" asp-controller="Account">
                @if (User.IsInRole(AppointmentScheduler.Helper.Roles.Admin))
                {
                    <h4>Register a new Admin account</h4>
                }
                else
                {
                    <h4>Create a new account</h4>
                }
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row mb-2">
                    <label class="col-md-2" asp-for="Name"></label>
                    <div class="col-md-10">
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label class="col-md-2" asp-for="Email"></label>
                    <div class="col-md-10">
                        <input asp-for="Email" class="form-control"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label class="col-md-2" asp-for="Password"></label>
                    <div class="col-md-10">
                        <input asp-for="Password" class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label class="col-md-2" asp-for="ConfirmPassword"></label>
                    <div class="col-md-10">
                        <input asp-for="ConfirmPassword" class="form-control"/>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label class="col-md-2" asp-for="RoleName"></label>
                    <div class="col-md-10">
                        <select asp-for="RoleName" asp-items="@AppointmentScheduler.Helper.Roles.GetRolesForDropDown(User.IsInRole(AppointmentScheduler.Helper.Roles.Admin))" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group mb-2">
                    <div class="col-md-10 offset-md-2">
                        <input type="submit" value="Register" class="btn btn-success" />
                    </div>
                </div>
                @if (!User.IsInRole(AppointmentScheduler.Helper.Roles.Admin))
                {
                    <p class="col-md-10 offset-md-2">
                        <a class="btn btn-primary" asp-action="Login">Sign In</a>
                    </p>
                }
                else
                {
                    <p class="col-md-10 offset-md-2">
                        <a class="btn btn-primary" asp-action="Index" asp-controller="Appointment">Back</a>
                    </p>
                }

            </form>
        </section>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}

